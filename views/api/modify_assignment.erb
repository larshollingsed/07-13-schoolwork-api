<body data_page_name="modify assignment">
  <h3>
    Choose an assignment to modify and save changes below
  </h3>
  
  <ul id="assignments">
  </ul>
  
  <div id="modify_form">
    <form id="form" action="/api/modify_assignment_confirm">
      <input type="hidden" id="assignment_id_field" name="assignment[id]">
      <ul id="form_list">
        <li>
          Assignment Name - <input id="name_field" type="text" name="assignment[name]">
        </li>
        <li>
          Description - <input id="description_field" type="text" name="assignment[description]">
        </li>
        <li>
          Repository Link - <input id="repository_field" type="text" name="assignment[repository]">
        </li>
        <li>
          Video or Article link - <input id="link_field" type="text" name="assignment[link]">
        </li>
        <li>
          Who worked on this assignment?
        </li>

      </ul>
      <input type="button" id="submitter" value="Save these Changes">
    </form>
  </div>
<script src="/modify_assignment.js" type="text/javascript"> </script>